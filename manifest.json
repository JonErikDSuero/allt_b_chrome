{
  "name": "Alternative Bookmarking",
  "description": "This extension is your alternative bookmark.",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus",
    "bookmarks"
  ],

  "icons": {
    "16": "images/heart_off.png",
    "48": "images/heart_off.png",
    "128": "images/heart_off.png"
  },

  "background": {
    "scripts": ["background.js", "jquery-2.1.1.min.js"]
  },
  "commands": {
    "bookmark_through_keyboard": {
      "suggested_key": { "default": "Alt+B" },
      "description": "Bookmark the current page through keyboard shortcut."
    }
  },

  "browser_action": {
    "default_icon": "images/heart_off.png"
  },

  "manifest_version": 2
}
